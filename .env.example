# Combined Environment Variables for Backend and Frontend
# Copy this file to .env and fill in your actual values
# NEVER commit .env to Git!

# ===== BACKEND CONFIGURATION =====

# Server Configuration
SERVER_PORT=8080

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=my_project_db
DB_USERNAME=postgres
DB_PASSWORD=YOUR_DATABASE_PASSWORD_HERE

# SerpAPI Configuration (Used for patent search functionality)
SERPAPI_KEY=YOUR_SERPAPI_KEY_HERE

# Email Configuration (Gmail App Password)
MAIL_USERNAME=YOUR_EMAIL@gmail.com
MAIL_PASSWORD=YOUR_GMAIL_APP_PASSWORD_HERE
ADMIN_EMAIL=YOUR_ADMIN_EMAIL@gmail.com

# Email Feature Toggle
EMAIL_ENABLED=false

# Gemini AI API Key (Optional)
# GEMINI_API_KEY=YOUR_GEMINI_API_KEY_HERE

# ===== FRONTEND CONFIGURATION =====

# Firebase Configuration
# Get these values from Firebase Console (https://console.firebase.google.com)
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# Razorpay Configuration (Test Mode)
# Get your API key from Razorpay Dashboard (https://dashboard.razorpay.com)
VITE_RAZORPAY_KEY_ID=rzp_test_your_key_here

# Google Maps Configuration
# Get your API key from Google Cloud Console (https://console.cloud.google.com)
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# API Base URL (for frontend to connect to backend)
VITE_API_BASE_URL=http://localhost:8080/api
